<script src="~/Scripts/CustomScripts/SaleModal.js"></script>
<style>
    a 
    {
        color: whitesmoke !important;
    }
</style>
<div class="col-md-12">
    <div class="jumbotron col-md-8">
        <p class="lead">Make a Sale</p>
        <div class="input-group pull-left">
            <input type="text" class="form-control " placeholder="Sale Number" aria-describedby="basic-addon1" id="userID">
        </div>
    <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-md pull-left" data-toggle="modal" data-target="#saleModal" onclick="partial()">
          Make Sale
        </button>
    </div>
        <div class="btn-group-vertical col-md-4" role="group">
            <button type="button" class="btn btn-default">@Html.ActionLink("Logout", "Logout", "Home")</button>
            @{String game;
              String sale;
              if (Session["Role"].ToString().Equals("Admin"))
              {
                  game = "Manage Games";
                  sale = "View All Sales";
              }
              else
              {
                  game = "View Games";
                  sale = "View My Sales";
              }
                }
            <button type="button" class="btn btn-default">@Html.ActionLink(game, "Index", "Game")</button>
            <button type="button" class="btn btn-default">@Html.ActionLink(sale, "Index", "Sale")</button>
            @if (Session["Role"].ToString().Equals("Admin")){
                <button type="button" class="btn btn-default">@Html.ActionLink("Manage Users", "Index", "User")</button>
                <button type="button" class="btn btn-default">@Html.ActionLink("Manage Genres", "Index", "Genre")</button>
                <button type="button" class="btn btn-default">@Html.ActionLink("Manage Tags", "Index", "Tag")</button>
            }

</div>
</div>


<!-- Modal -->
<div class="modal fade" id="saleModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Is this the correct cart?</h4>
            </div>
            <div class="modal-body" id="textHere">
            </div>

        </div>
    </div>
</div>