@{
    ViewBag.Title = "Games";
}
<div class="container">
    <h2>Games</h2>

    <form>
        <label>Game ID (for get and delete): </label>
        <input id="getGameId" type="number" placeholder="GameID" />
        <br />
        <label>game Name: </label>
        <input id="gameName" type="text" value="Super Mario World" />
        <br />
        <label>release Date: </label>
        <input id="releaseDate" type="date" value="3/11/2015" />
        <br />
        <label>price: </label>
        <input id="price" type="number" value="9.99" />
        <br />
        <label>inventory Stock: </label>
        <input id="inventoryStock" type="number" value="2" />
    </form>


        <form>
            <label>genre: </label>
            <input id="genre1" type="text" value="Platformer" />
            <br />
            <label>genre: </label>
