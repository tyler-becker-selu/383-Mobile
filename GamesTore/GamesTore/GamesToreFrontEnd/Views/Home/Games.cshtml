            <br />
            <label>genre: </label>
            <input id="genre3" type="text" placeholder="genre" />
            <br />
            <label>tag: </label>
            <input id="tag1" type="text" value="cool" />
            <br />
            <label>tag: </label>
            <input id="tag2" type="text" placeholder="tag" />
            <br />
            <label>tag: </label>
            <input id="tag3" type="text" placeholder="tag" />
            <br />
        </form>
    <button class="btn btn-default btn-block" type="button" value="getGames" onclick="getGames()" style="width: 100px">Get Games</button>
    <br />
    <button class="btn btn-default btn-block" type="button" value="postGame" onclick="postGame()" style="width: 100px">Post Game</button>
    <br />
    <button class="btn btn-default btn-block" type="button" value="getGame" onclick="getGame($('#getGameId').val())" style="width: 100px">Get Game</button>
    <br />
    <button class="btn btn-default btn-block" id="putGame" type="button" value="putGame" onclick="putGame()" disabled style="width: 100px">Put Game</button>
    <br />
    <button class="btn btn-default btn-block" type="button" value="deleteGame" onclick="deleteGame($('#getGameId').val())" style="width: 100px">Delete Game</button>
</div>
